    <add key="ForgotPassword:Enabled" value="true" />
    <add key="ForgotPassword:Email:DefaultFrom" value="*******************" />


    <!--Kraken API part -->
    <add key="KrakenBaseAddress" value="https://api.kraken.com" />
    <add key="KrakenApiVersion" value="0" />
    <add key="KrakenKey" value="***************" />
    <add key="KrakenSecret" value="********************" />
    <!--/ Kraken API part -->

    <!--Config STRIPE-->
    <add key="UseStripe" value="true" />
    <add key="Payment:MaxAmount" value="1000" />
    <add key="Payment:ApplicationFee" value="0.01" />
    <add key="Payment:StripeKey" value="***********" />
